{
  "name": "fullstack",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bunx concurrently 'npm:dev:*'",
    "dev:api": "cd api && bun run start:dev",
    "dev:api-gen": "wait-on tcp:3000 && cd api && bun run gen",
    "dev:frontend": "wait-on tcp:3000 && cd frontend && bun run dev"
  },
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": {
    "packages": [
      "api",
      "frontend"
    ]
  }
}